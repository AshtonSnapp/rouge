# https://projecteuler.net/problem=2

func fibonacci(one: nat, two: nat, max: nat) -> [nat] do
	mut sequence := [one, two]

	loop
		next = sequence[-1] + sequence[-2]
		if next > max then
			break
		else:
			sequence += next
		end
	end

	sequence
end

pub func main() do
	outln("\{fibonacci(1, 2, 4000000).iter.filter(|x| x % 2 == 0).sum()}")
ends