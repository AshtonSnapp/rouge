pub func main() do
	text := promptln("Give me some text with parentheses in it: ")

	max_nesting: nat = text.iter()
		.scan(0, (n, c) do
			if c == '(' then
				n += 1
				Option.some(n)
			elif c == ')' then
				n -= 1
				Option.some(n)
			else Option.none
		end)
		.max()
	
	outln("You get into a maximum of \{max_nesting} layers of parentheses in that text.")
end